<section>

    <h2 class="center-align">Crie uma nova Categoria</h2>

    <form class="form-style" action="/category/store" method="POST">
        {{#if error_message}}
            <div class="alert-error">
                <p>{{error_message}}</p>
            </div>
        {{/if}}
        <div class="input-field">
            <i class="material-icons prefix">account_circle</i>
            <label for="txt_name">Nome</label>
            <input id="txt_name" type="text" name="name"  placeholder="Nome"  class="validate"/>
        </div>

        <div class="input-field">
            <i class="material-icons prefix">account_circle</i>
            <label for="txt_description">Descrição</label>
            <textarea class="input-field" name="description" id="txt_description" cols="30" rows="10" placeholder="Descrição"></textarea>
        </div>

        <button class="waves-effect waves-light btn-large"  type="submit" >Salvar</button>
    </form>

</section>